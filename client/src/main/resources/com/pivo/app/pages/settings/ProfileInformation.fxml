<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.pivo.app.ProfileInformationController" spacing="10"
      style="-fx-padding: 20;">
    <Label text="User Profile" style="-fx-font-size: 20px;"/>
    <GridPane hgap="10" vgap="10">
        <Label text="Username:"/>
        <Label fx:id="usernameLabel" GridPane.columnIndex="1"/>
        <Label text="Email:" GridPane.rowIndex="1"/>
        <Label fx:id="emailLabel" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        <Label text="Created At:" GridPane.rowIndex="2"/>
        <Label fx:id="createdAtLabel" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        <Label text="Password for Editing:" GridPane.rowIndex="3"/>
        <PasswordField fx:id="passwordField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    </GridPane>
    <Button text="Edit Profile" fx:id="editButton" onAction="#editProfile"/>
    <Separator orientation="HORIZONTAL" VBox.vgrow="ALWAYS"/>
    <Label text="Create New User" style="-fx-font-size: 16px;"/>
    <GridPane vgap="10" hgap="10">
        <Label text="Username:"/>
        <TextField fx:id="newUsername" GridPane.columnIndex="1"/>
        <Label text="Email:" GridPane.rowIndex="1"/>
        <TextField fx:id="newEmail" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        <Label text="Password:" GridPane.rowIndex="2"/>
        <PasswordField fx:id="newPassword" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        <Button text="Create User" onAction="#createUser" GridPane.rowIndex="3" GridPane.columnIndex="1"
                style="-fx-background-color: #2d89ef; -fx-text-fill: white;"/>
    </GridPane>
</VBox>
