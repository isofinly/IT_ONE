<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.pivo.app.AccountSettingsController" spacing="10"
      style="-fx-padding: 20;">
    <Label text="Account Settings" style="-fx-font-size: 20px;"/>
    <ComboBox fx:id="userSelector" promptText="Select User" onAction="#onUserChange">
        <!-- Users are populated in the controller -->
    </ComboBox>
    <ComboBox fx:id="viewpointSelector" promptText="Select Viewpoint" onAction="#onViewpointChange">
        <!-- Viewpoints are set in the controller -->
    </ComboBox>
</VBox>
